<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="#dce3cf"
    tools:context=".AdminProfile">

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back"
    android:layout_marginTop="80dp"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/allcomplain"
    android:text="complain"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/allcomplain"
        android:id="@+id/searchbyroom"
        android:text="search by room no"/>

    <Button
        android:layout_width="match_parent"
        android:background="@drawable/back"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/pending"
        app:layout_constraintTop_toBottomOf="@id/searchbyroom"
        android:text="Pending allotment"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_marginTop="20dp"
        android:id="@+id/notices"
        app:layout_constraintTop_toBottomOf="@id/pending"
        android:text="NOTICES"/>


</android.support.constraint.ConstraintLayout>