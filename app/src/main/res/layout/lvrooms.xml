<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="140dp"
        android:layout_height="175dp"
        android:id="@+id/room_image"
        android:src="@drawable/default_profile_pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/room_image"
        android:text="name"
        android:textStyle="bold"
        android:id="@+id/room_name"
        android:textColor="#683fab"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="emailid"
        android:textStyle="bold"
        android:id="@+id/room_email"
        android:textColor="#683fab"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/room_image"
        app:layout_constraintTop_toBottomOf="@+id/room_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mobile no"
        android:id="@+id/room_mobile"
        android:textStyle="bold"
        android:textColor="#683fab"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/room_image"
        app:layout_constraintTop_toBottomOf="@+id/room_email"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Branch"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:id="@+id/room_branch"
        android:textColor="#683fab"
        app:layout_constraintLeft_toRightOf="@id/room_image"
        app:layout_constraintTop_toBottomOf="@+id/room_mobile"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="year"
        android:textStyle="bold"
        android:id="@+id/room_year"
        android:textColor="#683fab"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/room_image"
        app:layout_constraintTop_toBottomOf="@+id/room_branch"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room"
        android:textColor="#683fab"
        android:id="@+id/room_room"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/room_image"
        app:layout_constraintTop_toBottomOf="@+id/room_year"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEd"
        android:id="@+id/room_bed"
        android:textStyle="bold"
        android:textColor="#683fab"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/room_image"
        app:layout_constraintTop_toBottomOf="@+id/room_room"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="rollno"
        android:id="@+id/room_rollno"
        android:textColor="#683fab"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/room_image"
        app:layout_constraintTop_toBottomOf="@+id/room_bed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fees"
        android:textColor="#683fab"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:id="@+id/room_fees"
        app:layout_constraintLeft_toRightOf="@id/room_image"
        app:layout_constraintTop_toBottomOf="@+id/room_rollno"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address "
        android:id="@+id/room_address"
        android:textColor="#683fab"
        android:textStyle="bold"
        android:layout_marginLeft="1dp"
        app:layout_constraintTop_toBottomOf="@+id/room_fees"/>
    <Button
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:id="@+id/room_receipt"
        android:background="@drawable/back"
        android:text="see fees receipt"
        app:layout_constraintTop_toBottomOf="@id/room_address"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/allot"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="1dp"
        android:background="@drawable/back"
        app:layout_constraintLeft_toRightOf="@+id/room_receipt"
        app:layout_constraintTop_toBottomOf="@id/room_address"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remove"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:text="reJECT"
        android:background="@drawable/back"
        app:layout_constraintLeft_toRightOf="@+id/allot"
        app:layout_constraintTop_toBottomOf="@id/room_address"/>


</android.support.constraint.ConstraintLayout>